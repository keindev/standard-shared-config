{
  "name": "standard-shared-config",
  "version": "4.1.0",
  "description": "One shared config to rule them all",
  "license": "MIT",
  "homepage": "https://github.com/keindev/standard-shared-config#readme",
  "author": {
    "name": "Daniil Ryazanov",
    "email": "kein@tagproject.ru"
  },
  "keywords": [
    "automated",
    "cli",
    "config",
    "one",
    "shared",
    "standard",
    "unify"
  ],
  "bugs": "https://github.com/keindev/standard-shared-config/issues",
  "types": "./lib/index.d.ts",
  "type": "module",
  "exports": "./lib/index.js",
  "bin": {
    "shared-config": "bin/shared-config.js",
    "standard-shared-config": "bin/shared-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keindev/standard-shared-config.git"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:ts": "rimraf lib && tsc --extendedDiagnostics",
    "generate": "npm-run-all generate:*",
    "generate:changelog": "changelog generate --bump",
    "generate:ghinfo": "ghinfo generate -d media -t utils",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "rimraf coverage && eslint src --ext .ts",
    "lint:spell": "cspell -c .vscode/cspell.json --no-summary \"**/*.{js,ts,tsx,md,yml,json}\"",
    "prepare": "npm-run-all prepare:*",
    "prepare:config": "ts-package-shared-config",
    "prepare:docs": "docs-shared-config",
    "prepare:husky": "husky install",
    "prepare:vscode": "vscode-shared-config",
    "release": "npm-run-all prepare lint test build generate",
    "test": "npm-run-all test:*",
    "test:jest": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "dependencies": {
    "glob": "^10.2.6",
    "jsonfile": "^6.1.0",
    "lodash.isequal": "^4.5.0",
    "lodash.unionwith": "^4.6.0",
    "package-json-helper": "^4.0.6",
    "tasktree-cli": "^7.0.0",
    "yaml": "^2.1.3",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@tagproject/docs-shared-config": "^1.1.2",
    "@tagproject/ts-package-shared-config": "^10.0.3",
    "@tagproject/vscode-shared-config": "^2.0.5",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.4",
    "@types/lodash.isequal": "^4.5.6",
    "@types/lodash.unionwith": "^4.6.7",
    "@types/node": "^18.11.11",
    "@types/semver": "^7.3.13",
    "@types/strip-comments": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "changelog-guru": "^4.0.9",
    "cspell": "^6.17.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ghinfo": "^3.0.8",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "strip-ansi": "^7.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
