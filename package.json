{
  "name": "standard-shared-config",
  "version": "0.9.0",
  "description": "One shared config to rule them all",
  "homepage": "https://github.com/keindev/standard-shared-config#readme",
  "license": "MIT",
  "author": {
    "name": "Daniil Ryazanov",
    "email": "kein@tagproject.ru"
  },
  "keywords": [
    "automated",
    "shared",
    "config",
    "cli",
    "unify",
    "standard",
    "one"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "shared-config": "bin/shared-config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keindev/standard-shared-config.git"
  },
  "bugs": {
    "url": "https://github.com/keindev/standard-shared-config/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "check:lint": "rimraf coverage && eslint \"src/**\" --ext .ts",
    "check:spell": "cspell -c .vscode/cspell.json --no-summary \"README.md\" \"src/**/*.ts\"",
    "check": "npm-run-all check:*",
    "test": "jest",
    "generate:docs": "rimraf docs/api && typedoc",
    "generate:changelog": "changelog generate --bump",
    "generate:ghinfo": "ghinfo generate -d media -t utils",
    "generate": "npm-run-all generate:changelog generate:docs generate:ghinfo",
    "build": "rimraf lib && tsc --extendedDiagnostics",
    "release": "npm-run-all prepare check test build generate"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "jsonfile": "^6.1.0",
    "semver": "^7.3.5",
    "strip-comments": "^2.0.1",
    "tasktree-cli": "^4.0.1",
    "write-pkg": "^4.0.0",
    "yaml": "^1.10.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.15",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/semver": "^7.3.4",
    "@types/strip-comments": "^2.0.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "changelog-guru": "^2.0.14",
    "cspell": "^5.3.12",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^5.1.0",
    "ghinfo": "^1.0.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "strip-ansi": "^7.0.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "type-fest": "^1.0.2",
    "typedoc": "^0.20.35",
    "typedoc-plugin-markdown": "^3.7.1",
    "typescript": "4.2.4"
  }
}
